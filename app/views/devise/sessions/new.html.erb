<div class="col-sm-6 col-sm-offset-2">
  <h2>Sign in</h2>

  <%= simple_form_for(resource, html: { class: 'form-horizontal well' }, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, :required => false %>
      <%= f.input :remember_me, :as => :boolean, :wrapper => :checkbox if devise_mapping.rememberable? %>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.button :submit, "Sign in", class: "btn-success" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
