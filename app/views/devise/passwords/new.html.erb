<div class="col-xs-6 col-xs-offset-2">
  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {class: 'form-horizontal well', :method => :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, :required => true, :autofocus => true, :wrapper => :bootstrap3 %>
    </div>

    <div class="form-group">
      <div class="col-xs-offset-2">
        <%= f.button :submit, "Send me reset password instructions", :class => "btn-success" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
